<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<update handle="editor"/>
	<body>
		<referenceBlock name="menu">
			<action method="setActive">
				<argument name="itemId" xsi:type="string">Cb_RecommendationTool::postcode_locations</argument>
			</action>
		</referenceBlock>
		<referenceBlock name="page.title">
			<action method="setTitleClass">
				<argument name="class" xsi:type="string">complex</argument>
			</action>
		</referenceBlock>
		<referenceContainer name="content">
			<block class="Cb\RecommendationTool\Block\Adminhtml\Locations" name="locations_list"/>
		</referenceContainer>
	</body>
</page>